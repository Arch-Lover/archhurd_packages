# Maintainer: Luca Weiss <luca (at) z3ntu (dot) xyz>

pkgname=gnumach
pkgver=1.8.r40.gde813a9c
pkgrel=1
pkgdesc="GNU Mach"
arch=(i686)
url="http://www.gnu.org/software/hurd/microkernel/mach/gnumach.html"
license=('GPL')
groups=('base')
makedepends=('git' 'mig' 'glibc')
source=(git+https://git.savannah.gnu.org/git/hurd/gnumach.git)
sha512sums=('SKIP')

pkgver() {
  cd $pkgname
  git describe --long | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
  rm -rf build
  mkdir build

  cd $pkgname
  autoreconf -fi
}

build() {
  cd build

  ../$pkgname/configure \
    --prefix=/usr \
    --libexecdir=/usr/lib
  make
}

package() {
  cd build  
  make DESTDIR="$pkgdir" install

  # move gnumach to the correct location
  mv "$pkgdir"/usr/boot "$pkgdir"/boot

  # remove files present in gnumach-headers
  rm -r "$pkgdir"/usr/include
  rm -r "$pkgdir"/usr/share/info
} 

